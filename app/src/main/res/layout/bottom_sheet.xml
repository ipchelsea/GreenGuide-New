<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/btmSheet"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bottom_sheet_blue"
        app:behavior_hideable="true"
        app:behavior_peekHeight="@dimen/reviews_bottom_sheet_peek_height"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/bottom_sheet_reviews"/>

            <com.guide.green.green_guide.Utilities.MeasureablePager
                android:id="@+id/poiResultsSwipeView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

                <android.support.v4.view.PagerTabStrip
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/reviews_bottom_sheet_peek_height"
                    android:background="@color/green" />

            </com.guide.green.green_guide.Utilities.MeasureablePager>

        </android.support.v7.widget.LinearLayoutCompat>
    </android.support.v4.widget.NestedScrollView>
</merge>