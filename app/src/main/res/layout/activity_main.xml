<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:openDrawer="start">

        <include
            layout="@layout/app_bar_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <android.support.design.widget.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            app:headerLayout="@layout/nav_header_main"
            app:menu="@menu/activity_main_drawer" />
    </android.support.v4.widget.DrawerLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/btmSheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bottom_sheet_blue"
        app:behavior_hideable="true"
        app:behavior_peekHeight="@dimen/reviews_bottom_sheet_peek_height"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/reviews_bottom_sheet_peek_height"
                android:background="@android:color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/previewCompanyName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/reviews_bottom_sheet_peek_height_halved"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:text="宝鸡有一群怀揣着梦想的少年相信在牛大叔的带领下会创造生命的奇迹网络科技有限公司"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:overScrollMode="ifContentScrolls" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/reviews_bottom_sheet_peek_height_halved"
                    android:orientation="horizontal"
                    android:minHeight="@dimen/reviews_bottom_sheet_peek_height_halved">

                    <TextView
                        android:id="@+id/btmSheetRatingValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="5dp"
                        android:textSize="13sp"
                        android:layout_weight="1"
                        android:text="123"
                        android:paddingLeft="5dp" />

                    <ImageView
                        android:id="@+id/btmSheetRatingStars"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:layout_gravity="top"
                        android:paddingBottom="5dp"
                        android:scaleType="center"/>

                    <TextView
                        android:id="@+id/btmSheetRatingsCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:textSize="13sp"
                        android:layout_weight="2"
                        android:text="54 Reviews" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/btmSheetAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textColor="@color/bottom_sheet_text"/>

            <TextView
                android:id="@+id/btmSheetCityName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bottom_sheet_text"/>

            <TextView
                android:id="@+id/btmSheetIndustry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bottom_sheet_text"/>

            <TextView
                android:id="@+id/btmSheetProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:textColor="@color/bottom_sheet_text"/>

            <ImageView
                android:id="@+id/btmSheetHistogram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"/>

            <LinearLayout
                android:id="@+id/userReviewList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

            </LinearLayout>
        </android.support.v7.widget.LinearLayoutCompat>
    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>
